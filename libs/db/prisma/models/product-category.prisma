model ProductCategory {
    id        BigInt            @id @default(autoincrement()) @db.BigInt
    name      String
    parentId  BigInt?           @map("parent_id") @db.BigInt
    parent    ProductCategory?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
    children  ProductCategory[] @relation("CategoryToCategory")
    createdAt DateTime          @default(now()) @map("created_at")
    createdBy BigInt            @map("created_by") @db.BigInt
    updatedAt DateTime?         @updatedAt @map("updated_at")
    updatedBy BigInt?           @map("updated_by") @db.BigInt
    isDeleted Boolean?          @default(false) @map("is_deleted")
    deletedAt DateTime?         @map("deleted_at")
    deletedBy BigInt?           @map("deleted_by") @db.BigInt

    products Product[]

    @@map("product_categories")
}
